<?xml version="1.0"?>
<openerp>
    <data>

        <!-- *********** MODIFICATION DU BON DE COMMANDE FOURNISSEUR POUR AJOUTER LES INFOS SUIVANTES ********   -->

        <template id="report_sale_order_inherit"
                  inherit_id="sale.report_saleorder_document">

            <xpath expr="//div[@class='page']" position="before">

                <head>
		<title>
			Test Hightchats **
		</title>

		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"/>

		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

		<script src="https://code.highcharts.com/highcharts.js"></script>
		<script src="https://code.highcharts.com/modules/data.js"></script>
		<script src="https://code.highcharts.com/modules/exporting.js"></script>
		<script src="https://code.highcharts.com/modules/export-data.js"></script>
	</head>

	<body>

		<div class="container">
			<div class="row">
				<div id="container" style="min-width: 610px; height: 700px; margin: 0 auto"></div>

<table id="datatable">
    <tr><th><td>Prix unitaire</td></th></tr>
	<tr><th  t-foreach="doc.order_line" t-as="l"><td t-esc="l.price_unit"></td></th></tr>

</table>
			</div>
		</div>

		<script type="text/javascript">
			Highcharts.chart('container', {
			    data: {
			        table: 'datatable'
			    },
			    chart: {
			        type: 'column'
			    },
			    title: {
			        text: 'Data extracted from a HTML table in the page'
			    },
			    yAxis: {
			        allowDecimals: true,
			        title: {
			            text: 'Units'
			        }
			    },
			    tooltip: {
			        formatter: function () {
			            return '<b>' + this.series.name + '</b><br/>' +
			                this.point.y + ' ' + this.point.name.toLowerCase();
			        }
			    }
			});
		</script>

	</body>

            </xpath>

		<!--	<field name="partner_id" position="after">
				<field name="rapport_url"/>
			</field>  -->


        </template>
    </data>
</openerp>
